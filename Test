/* Assuming a maximum width of 480px for small mobile devices */
@media only screen and (max-width: 480px) {
  .sidebar {
    /* Collapse the sidebar or turn into a dropdown/toggle menu */
    display: none; /* or adjust as needed for a toggle */
  }

  .main-content,
  .card,
  .card-body {
    /* Allow content to fill the available space */
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Adjust the size of the card titles, text, etc. */
  .card-title {
    font-size: 1rem; /* Adjust as needed */
  }

  .card-text {
    font-size: 0.8rem; /* Adjust as needed */
  }

  /* Stack elements vertically within cards */
  .card-body {
    display: flex;
    flex-direction: column;
  }

  /* Adjust button sizes and layout */
  .btn {
    padding: 0.5rem;
    margin: 0.5rem 0;
    width: auto;
  }

  /* Adapt font sizes and element sizes as needed */
  h1, h2, h3, p {
    font-size: smaller;
  }

  /* Any other specific styling adjustments for smaller screens */
}

