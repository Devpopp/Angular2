<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Simple Slider</title>
<style>
  .slider {
    overflow: hidden;
    max-width: 300px; /* You can set this to the desired width */
  }

  .slide-container {
    white-space: nowrap;
    transition: transform 0.3s ease;
  }

  .slide {
    display: inline-block;
    width: 300px; /* This should match the max-width of the slider */
    /* Add any other styling for your slides here */
  }
</style>
</head>
<body>

<div class="slider">
  <div class="slide-container">
    <div class="slide">Slide 1</div>
    <div class="slide">Slide 2</div>
    <div class="slide">Slide 3</div>
    <div class="slide">Slide 4</div>
    <div class="slide">Slide 5</div>
    <!-- ... add as many slides as you need -->
  </div>
</div>

<button onclick="moveSlide(-1)">Prev</button>
<button onclick="moveSlide(1)">Next</button>

<script>
var slideIndex = 0;
showSlides(slideIndex);

function moveSlide(n) {
  showSlides(slideIndex += n);
}

function showSlides(n) {
  var i;
  var slides = document.getElementsByClassName("slide");
  var container = document.querySelector(".slide-container");
  if (n >= slides.length) {slideIndex = 0}    
  if (n < 0) {slideIndex = slides.length - 1}
  container.style.transform = 'translateX(' + (-slideIndex * 300) + 'px)';
}
</script>

</body>
</html>
