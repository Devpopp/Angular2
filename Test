<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Card Slider</title>
    <style>
        #cards-container {
            overflow: hidden;
            white-space: nowrap;
            width: 100%; /* Adjust the width as necessary */
            transition: transform 0.3s ease-in-out;
        }
        .card {
            display: inline-block;
            width: 100%; /* Each card takes full width of the container */
            /* Other styles for your card */
        }
        /* Style for the buttons */
        .nav-btn {
            cursor: pointer;
            /* Add button styling */
        }
    </style>
</head>
<body>

<div id="cards-container">
    <div class="card">Card 1: Hello World!</div>
    <div class="card">Card 2: Nice to meet you.</div>
    <div class="card">Card 3: Have a nice day!</div>
</div>

<button class="nav-btn" id="prevBtn">Previous</button>
<button class="nav-btn" id="nextBtn">Next</button>

<script>
    let currentIndex = 0;
    const cardsContainer = document.getElementById('cards-container');
    const cards = document.querySelectorAll('.card');
    const cardWidth = cards[0].offsetWidth; // Assuming all cards are the same width

    function updateCardPosition() {
        cardsContainer.style.transform = `translateX(-${currentIndex * cardWidth}px)`;
    }

    document.getElementById('prevBtn').addEventListener('click', function() {
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : 0;
        updateCardPosition();
    });

    document.getElementById('nextBtn').addEventListener('click', function() {
        currentIndex = (currentIndex < cards.length - 1) ? currentIndex + 1 : cards.length - 1;
        updateCardPosition();
    });
</script>

</body>
</html>
