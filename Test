<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Card Navigation</title>
  <style>
    .card {
      display: none;
      /* Add your card styles here */
    }
    .card.active {
      display: block;
    }
  </style>
</head>
<body>

<div id="cards-container">
  <div class="card active">Card 1 content here</div>
  <div class="card">Card 2 content here</div>
  <div class="card">Card 3 content here</div>
</div>

<button id="prevBtn">Previous</button>
<button id="nextBtn">Next</button>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    let currentIndex = 0;
    const cards = document.querySelectorAll('.card');
    const totalCards = cards.length;
    
    function updateCards(index) {
      cards.forEach(card => card.classList.remove('active'));
      cards[index].classList.add('active');
    }

    document.getElementById('prevBtn').addEventListener('click', () => {
      currentIndex = (currentIndex > 0) ? currentIndex - 1 : totalCards - 1;
      updateCards(currentIndex);
    });

    document.getElementById('nextBtn').addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % totalCards;
      updateCards(currentIndex);
    });

    updateCards(currentIndex); // Initialize the view
  });
</script>

</body>
</html>
