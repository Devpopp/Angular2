<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Card Carousel</title>
    <style>
        #cards-container {
            overflow: hidden;
            white-space: nowrap;
            width: 300px; /* Set this to the width of your cards */
        }
        .card {
            display: inline-block;
            width: 300px; /* Set this to the width of your cards */
            /* Add other card styles here */
        }
        #prevBtn, #nextBtn {
            /* Style your buttons as needed */
        }
    </style>
</head>
<body>

<div id="cards-container">
    <div class="card">Card 1: Hello World!</div>
    <div class="card">Card 2: Nice to meet you.</div>
    <div class="card">Card 3: Have a nice day!</div>
</div>

<button id="prevBtn">Previous</button>
<button id="nextBtn">Next</button>

<script>
    var container = document.getElementById('cards-container');
    var scrollAmount = 0;

    document.getElementById('prevBtn').addEventListener('click', function() {
        // Scroll to the left
        container.scrollBy({left: -300, behavior: 'smooth'}); // 300 is the card width
    });

    document.getElementById('nextBtn').addEventListener('click', function() {
        // Scroll to the right
        container.scrollBy({left: 300, behavior: 'smooth'}); // 300 is the card width
    });
</script>

</body>
</html>

