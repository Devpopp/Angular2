import pandas as pd

# DataFrames representing your data
currentmonthmaindata_json = pd.DataFrame({
    'app_name': ['AppOne', 'AppTwo', 'AppThree', 'AppFour'],
    # ... other columns ...
})
app_name_data = pd.DataFrame({
    'app_name': ['AppOne', 'AppThree'],
    # ... other columns ...
})

def filter_data_by_portfolio_apps():
    # Inline normalization of app names and filtering the DataFrame
    filtered_data = currentmonthmaindata_json[
        currentmonthmaindata_json['app_name'].apply(
            lambda name: name.lower().replace("(", '').replace(")", '').strip()
        ).isin(
            app_name_data['app_name'].apply(
                lambda name: name.lower().replace("(", '').replace(")", '').strip()
            )
        )
    ]
    return filtered_data

# Execution of the function to get the filtered data
filtered_curr_table_data = filter_data_by_portfolio_apps()
